<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".katalog">


    <Button
        android:id="@+id/rest1"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="@color/blue"
        android:onClick="opisanie"
        android:text="Favvora Oilaviy Restorani"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/rest2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <Button
        android:id="@+id/rest2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="@color/blue"
        android:text="Restoran 2"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rest3"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="@color/blue"
        android:text="Restoran 3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rest4"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="115dp"
        android:backgroundTint="@color/blue"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:text="Restoran 4"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="88dp"
        android:text="КАТАЛОГ РЕСТОРАНОВ"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>